{
    "files": [
        "src/*.ts",
        "src/models/*.ts"
    ],
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/",
                "src/types/*"
            ]
        },
        "lib": [
            "es2017",
            "dom"
        ]
    }
}
